  </head>                   

  <body>
    <div class="main_div">
      <div class="box">
        <h1>Login Form</h1>
        <form action="/userlogin" method="POST">
            <div class="input-box">
                <input
                type="email"
                name="useremailo"
                id="name"
                autocomplete="off"
                required
                />
                <label for="useremail">User Email</label>
            </div>
            <div class="input-box">
                <input
                type="password"
                name="userpasswordo"
                id="name"
                autocomplete="off"
                required
                />
                <label for="userpassword">User Password</label>
            </div>
            <div>      
                <input type="submit" value="Login"/>
            </div>
        </form>
      </div>
    </div>
  </body>
</html>
